@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer _localizer
@model ShengFengDesign.ViewModels.Album.AlbumViewModel
@{
    ViewData["Title"] = "中部、台中推薦裝修，作品相簿";
    ViewData["PageName"] = "album";
}

<!-- Hero-area -->
<div class="hero-area section">
    <!-- Backgound Image -->
    <div class="bg-image bg-parallax overlay"
         style="background-image: url(/asserts/images/clints_logo.png)"></div>
    <!-- /Backgound Image -->

    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 text-center">
                <ul class="hero-area-tree">
                    <li><a asp-controller="Home" asp-action="Index">@_localizer["Home"]</a></li>
                    <li>@_localizer["Album"]</li>
                </ul>
                <h1 class="white-text">@_localizer["Album"]</h1>
            </div>
        </div>
    </div>
</div>
<!-- /Hero-area -->

<div id="Album" class="section">
    <!-- container -->
    <div class="container">
        <!-- courses -->
        <div id="courses-wrapper">
            <div class="row">
                @foreach (var item in Model.AlbumList)
                {
                    <div class="col-md-4">
                        <div class="card card-default" style="max-height:300px;min-height:300px;padding-left:10px;padding-right:10px;margin-bottom:20px;border:solid 1px rgba(0,0,0,.08);">
                            <a asp-controller="Album" asp-action="Index" asp-route-id="@item.ID" class="card-link">
                                <span class="card-img">
                                </span>
                                <div class="card-body" style="line-height:normal">
                                    <h3 style="min-height:50px">@item.Title</h3>
                                    <br />
                                    @Html.Raw(@item.Content)
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- container -->
</div>

<div id="contact" class="section">
    <!-- container -->
    <div class="container">
        <div class="row">
            <div class="section-header text-center">
                <h2>Infomation For You To Know</h2>
                <p>
                    非常有經驗
                </p>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <!-- contact form -->
            <div class="col-md-6">
                <img src="~/asserts/images/featured-vector.png"
                     alt="album"
                     style="max-width:100%" />
            </div>
            <!-- /contact form -->
            <!-- contact information -->
            <div class="col-md-5 col-md-offset-1">
                <h4 class="lead">Articles</h4>
                <hr>
                <ul class="contact-details">
                    @{int i = 0;}
                    @foreach (var item in Model.AlbumList)
                    {
                        @if (i <= 5)
                        { 
                            <li>
                                <a asp-controller="Album" asp-action="Index" asp-route-id="@item.ID" class="card-link">
                                @item.Title
                                </a>
                            </li>
                        }
                        i++;
                    }
                </ul>
            </div>
            <!-- contact information -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>